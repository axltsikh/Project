<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    app:cardElevation="25dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            style="@style/OperationRecycleViewItemTextViewStyle"
            android:id="@+id/operationTypeRecyclerViewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            style="@style/OperationRecycleViewItemViewStyle" />
        <TextView
            style="@style/OperationRecycleViewItemTextViewStyle"
            android:id="@+id/operationValueRecyclerViewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            style="@style/OperationRecycleViewItemViewStyle" />
        <TextView
            style="@style/OperationRecycleViewItemTextViewStyle"
            android:id="@+id/operationCategoryRecyclerViewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            style="@style/OperationRecycleViewItemViewStyle" />
        <TextView
            style="@style/OperationRecycleViewItemTextViewStyle"
            android:id="@+id/operationDateRecyclerViewItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>