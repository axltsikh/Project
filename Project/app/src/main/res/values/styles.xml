<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="SettingButtonStyle" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="TextViewSettings" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Круглые кнопки для пароля-->
    <style name="InputPasswordButton" parent="@style/Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
    </style>


    <style name="OperationRecycleViewItemTextViewStyle">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="OperationRecycleViewItemViewStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:background">@color/LightGray</item>
    </style>
    <!--Нижняя панель-->
    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="backgroundTint">@color/WarmGray</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">24dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>